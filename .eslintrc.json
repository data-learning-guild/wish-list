{
  "rules": {
    // allow paren-less arrow functions
    "arrow-parens": 0,
    // allow async-await
    "generator-star-spacing": 0,
    // allow debugger during development
    // セミコロンは禁止
    "semi": [2, "never"],
    "indent": [2, 2],
    "no-extra-parens": 1,
    // additional config
    "no-unused-vars": 0,
    "no-multiple-empty-lines": 0,
    "comma-dangle": 0,
    "object-property-newline": 0,
    "quotes": 0,
    "space-before-function-paren": 0
  }
}
